<div class="span-6 last sidebar">
	<div class="halfpadbox">
		<div class="sidebar_panel">
			<%= image_tag @seller.avatar.url(:thumb_110), :class => 'avatar' %>
			<h4><%= @seller.store_name %></h4><!-- store name -->
			<h6><%= @seller.name %></h6><!-- personal name-->
			<p class="bottom"><%= @seller.location %></p><!-- location -->
		</div>
		<ul class="store_nav">
			<li><%= link_to "home", seller_url(:id => @seller.id), :class => (@profile_section ? nil : 'selected') %></li>
		  <li><%= link_to "products #{@seller.products.active.count}", seller_url(:id => @seller.id, :profile_section => :products), :class => (@profile_section == 'products' ? 'selected' : nil) %></li>
			<% if @profile_section == 'products' %>
				<ul class="store_sub_nav">
					<li><%= link_to 'ALL', seller_url(:id => @seller.id, :profile_section => :products), :class => (@collection_id ? nil : 'selected') %></li>
					<% for collection in @seller.collections.active %>
						<li><%= link_to collection.name, seller_url(:id => @seller.id, :profile_section => :products, :collection_id => collection.id), :class => (@collection_id.to_i == collection.id ? 'selected' : nil) %></li>
					<% end %>
				</ul>
			<% end %>
		  <li><%= link_to "blog", seller_url(:id => @seller.id, :profile_section => :blog), :class => (@profile_section == 'blog' ? 'selected' : nil) %></li>
		  <li><%= link_to "notes", seller_url(:id => @seller.id, :profile_section => :notes), :class => (@profile_section == 'notes' ? 'selected' : nil) %></li>
		  <li><a href="#">about</a></li>
		</ul>
		<div class="sidebar_panel">
			<p><%= RedCloth.new(truncate(@seller.store_description,250,link_to('... more Â»', '#'))).to_html unless @seller.store_description.blank? %></a></p>
		</div>

		<div class="sidebar_panel bottom">
			<h4>Have a question?</h4>
			<p class="bottom"><%= link_to "Send #{@seller.store_name} a message", new_manage_message_url(:message => {:recipient_id => @seller.id}) %></p>
		</div>
	</div>
</div>
